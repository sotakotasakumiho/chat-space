.side-bar
  .header
    .header__box
      %p.header__box__name
        = current_user.name
      %ul.header__box__menu
        %li.header__box__menu__edit-user
          = link_to new_group_path do
            = icon('fas','edit')
        %li.header__box__menu__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas','cog', class: 'icon')
        
  .groups
    - current_user.groups.each do |group|
      %ul.group
        = link_to group_messages_path(group) do
          %p.group__group__name
            = group.name
          %p.group__latest-massage
            = group.show_last_message
  